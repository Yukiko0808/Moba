<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ContactActivity">

    <TextView
        android:id="@+id/ContactName_TV_ID"
        android:layout_width="235dp"
        android:layout_height="38dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="32dp"
        android:text="Beispiel Name"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/ContactBirthday_TV_ID"
        android:layout_width="233dp"
        android:layout_height="36dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="00-00-0000"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/ContactName_TV_ID" />

    <TextView
        android:id="@+id/ContactAlter_TV_ID"
        android:layout_width="234dp"
        android:layout_height="37dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="8dp"
        android:text="Irgendwann kÃ¶nnte hier das Alter stehen"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/ContactBirthday_TV_ID" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />
</androidx.constraintlayout.widget.ConstraintLayout>