<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayoutCard"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/text_bg_roundedcorners"
    android:elevation="4dp"
    android:orientation="vertical"
    android:padding="20dp">


    <TextView
        android:id="@+id/headline"
        android:layout_width="245dp"
        android:layout_height="29dp"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_light"
        android:text="Daily Horoskope"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/zodiacsign_TextView"
        android:layout_width="247dp"
        android:layout_height="35dp"
        android:layout_below="@+id/headline"
        android:layout_alignParentStart="true"
        android:fontFamily="@font/poppins_semibold"
        android:text="TextView"
        android:textColor="@color/colorText_darkRed"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/headline" />

    <TextView
        android:id="@+id/horoskopText_ID"
        android:layout_width="340dp"
        android:layout_height="104dp"
        android:layout_below="@+id/zodiacsign_TextView"
        android:layout_alignParentStart="true"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/poppins_light"
        android:text="Horoskop"
        android:textColor="@color/colorText_darkRed"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zodiacsign_TextView" />

    <TextView
        android:id="@+id/subline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/horoskopText_ID"
        android:layout_alignParentStart="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="2dp"
        android:fontFamily="@font/poppins_light"
        android:text="learn more >"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/horoskopText_ID" />

    <ImageView
        android:id="@+id/zodiacsign"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignTop="@+id/headline"
        android:layout_alignEnd="@+id/horoskopText_ID"
        android:layout_marginStart="33dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="0dp"
        android:layout_toEndOf="@+id/zodiacsign_TextView"
        android:tint="@color/colorText_darkRed"
        app:srcCompat="@drawable/aquarius_black" />

</RelativeLayout>