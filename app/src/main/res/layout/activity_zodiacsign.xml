<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ZodiacsignActivity">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="190dp"
        android:layout_marginTop="-8dp"
        android:layout_marginBottom="8dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/background_zodiac" />

    <TextView
        android:id="@+id/Sternzeichen_zeitraum"
        android:layout_width="308dp"
        android:layout_height="38dp"
        android:fontFamily="@font/poppins_light"
        android:text="TextView"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/zodiacsigntitle"
        app:layout_constraintTop_toBottomOf="@+id/zodiacsigntitle" />

    <ImageView
        android:id="@+id/zodiacsignimage"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginTop="64dp"
        android:tint="@color/colorText_darkRed"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Sternzeichen_zeitraum"
        app:srcCompat="@drawable/aquarius_black" />

    <TextView
        android:id="@+id/zodiacsigntitle"
        android:layout_width="190dp"
        android:layout_height="49dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/poppins_bold"
        android:text="Zodiacsign"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/imageView2" />

    <TextView
        android:id="@+id/zodiacsignstext"
        android:layout_width="352dp"
        android:layout_height="367dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="24dp"
        android:layout_marginRight="9dp"
        android:background="@drawable/text_bg_roundedcorners"
        android:elevation="4dp"
        android:fontFamily="@font/poppins_light"
        android:paddingLeft="24dp"
        android:paddingTop="24dp"
        android:paddingEnd="24dp"
        android:paddingRight="24dp"
        android:paddingBottom="20dp"
        android:text="TextView"
        android:textColor="@color/colorText_darkRed"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/zodiacsignimage" />


    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar_white"

        android:foregroundTint="#FFFFFFFF"
        app:subtitleTextColor="#FFFFFFFF"
        app:titleTextColor="#FFFFFFFF" />

    <ImageView
        android:id="@+id/zodiacsignsternbild"
        android:layout_width="89dp"
        android:layout_height="97dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toTopOf="@+id/imageView2"
        app:layout_constraintEnd_toEndOf="@+id/toolbar"
        app:layout_constraintHorizontal_bias="0.863"
        app:layout_constraintStart_toStartOf="@+id/toolbar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.04000002"
        app:srcCompat="@drawable/aquariussternbild" />


</androidx.constraintlayout.widget.ConstraintLayout>